<form action="/admin/roles/edit" method="post">
    <label for="name">Nombre:</label>
    <input type="text" name="name" id="name" value="{{role.name}}">
    <label for="description">Descripci√≥n:</label>
    <textarea name="description" id="description" cols="30" rows="10">{{role.description}}</textarea>
    <label for="resources">Resources:</label>
    <select name="resources" id="resources" multiple>
        {{#resources}}
            <option value="{{_id}}" {{#if active}}selected{{/if}}>{{path}}</option>
        {{/resources}}
    </select>
    <input type="hidden" value="{{role._id}}" name="id">
    <button type="submit">Guardar</button>
</form>